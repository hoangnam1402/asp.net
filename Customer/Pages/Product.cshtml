@page
@model PrivacyModel
@{
    ViewData["Title"] = "Product";
}

    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        <div class="shop__sidebar__search">
                            <form>
                                <input type="text" placeholder="Search..." asp-for="searchString">
                                <button type="submit" class="btn btn-primary"> Search </button>
                            </form>
                        </div>
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__categories">
                                                <ul class="nice-scroll  filter__controls">
                                                    @foreach(var x in Model.categories)
                                                    {
                                                        <li class="active" data-filter=".@x.CategoryId">@x.CategoryName</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__left">
                                    <p class="my-3"> Showing @(Model.currentPage*3-2) - 
                                        @(Model.currentPage*3 < Model.productNumber ? Model.currentPage*3 : Model.productNumber ) 
                                        of @(Model.productNumber) results</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row product__filter">
                        @foreach(var x in Model.products
                        .Where(x => x.stopped == true)
                        .Skip(((int)Model.currentPage - 1) * (int)Model.pageSize)
                        .Take((int)Model.pageSize))
                        {
                        <div class="col-lg-4 col-md-6 col-sm-6 mix @x.CategoryId">
                            <div class="product__item sale">
                                <div class="product__item__pic set-bg" data-setbg="img/product/product-3.jpg"></div>
                                <div class="product__item__text">
                                    <h6>@x.name</h6>
                                    <a href="#" class="add-cart">+ Add To Cart</a>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                    <h5>@x.cost Đ</h5>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="product__pagination">
                            @for(var i = 1; i <= Model.pageCount; i++)
                            {
                                <li class="page-item @(i == Model.currentPage ? "active" : "")" style="float:left">
                                    <a asp-page="/Product" asp-route-currentpage="@i" class="page-link">@i</a>
                                </li>
                            }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Section End -->